<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ab.cd.ef.postermaker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:appComponentFactory="whateverString"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory">
        <activity
            android:name=".main.SplashActivity"
            android:exported="true" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.PrivacyActivity"
            android:exported="false" />
        <activity
            android:name=".main.QuitActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id" />

        <activity
            android:name=".main.MainActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".main.SelectImageActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name="com.msl.textmodule.TextActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.TemplatesActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.SelectImageTwoActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.PosterActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.CropActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.CropActivityTwo"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.ShareImageActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.ShareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.SavedHistoryActivity"
            android:screenOrientation="portrait"
             />
        <activity
            android:name=".main.MyCreationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.PickColorImageActivity"
            android:screenOrientation="portrait"
             />
    </application>

</manifest>